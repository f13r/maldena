{% extends "layouts/admin.twig" %}

{% set selected = 'demo' %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="{{ path('/admin/user/test') }}">Клиенты</a>
            <i class="icon-angle-right"></i>
        </li>
        <li>
            Подписка на уведомления о клиентах
        </li>
    </ul>
{% endblock %}

{% block content %}

    {% if app.session.getFlashBag.get('demoListChangeSuccessful') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Well done!</strong> Статус успешно изменён.
        </div>
    {% endif %}
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header" data-original-title="">
                <h2><i class="halflings-icon user"></i><span class="break"></span>Cписок рассылки</h2>
                <div class="box-icon">
                    <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div  class="dataTables_wrapper" role="grid">
                    {% if subscribers %}
                    <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable"
                           id="DataTables_Table_0">
                        <thead>
                        <tr>
                            <th>
                                Имя
                            </th>
                            <th>
                                E-mail
                            </th>
                        </tr>
                        </thead>

                        <tbody role="alert" aria-live="polite" aria-relevant="all">
                        {% for subscriber in subscribers %}
                            <tr class="odd">
                                <td class="sorting_1">{{ subscriber.name }}</td>
                                <td class="center">{{ subscriber.email }}</td>
                                <td class="center ">
                                    <span class="label{% if subscriber.sendingStatus == 1 %} label-success{% else %} label-important{% endif %}">
                                        {% if subscriber.sendingStatus == 1 %}
                                            Получает рассылку
                                        {% else %}
                                            Не активен
                                        {% endif %}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="row-fluid">
                    </div>
                    {%  else %}
                        <div class="priority high">
                            <span>Никто не хочет знать о клиентах :)</span>
                        </div>

                    {% endif %}

                </div>
            </div>

        </div>
    </div>
{% endblock %}
