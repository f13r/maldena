{% extends "layouts/admin.twig" %}

{% set selected = 'feedback' %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="{{ path('/admin/user/test') }}">Клиенты</a>
            <i class="icon-angle-right"></i>
            <a href="{{ path('/admin/user/test') }}">Обратная связь</a>
            <i class="icon-angle-right"></i>
        </li>
        <li>Отзыв</li>
    </ul>
{% endblock %}

{% block content %}
    <div class="priority{% if feedback.status == 1 %} low{% else %} high{% endif %}"><span>О клиенте</span></div>
    <div class="task{% if feedback.status == 1 %} low{% else %} high{% endif %}">
        <div class="desc">
            <div class="title">{{ feedback.user.name }}</div>
            <div>
                Отзыв - <strong>"{{ feedback.text }}"</strong>
            </div>
        </div>
        <div class="time">
            <div class="date">{{ feedback.createdAt|date("F j, H:m") }}</div>
            <div class="desc">
            <span class="label{% if feedback.status == 1 %} label-success{% else %} label-important{% endif %}">
                {% if feedback.status == 1 %}
                    Проверено
                {% else %}
                    Ожидает проверки
                {% endif %}
            </span>
            </div>
        </div>
    </div>
    <hr>

    <div class="box">
        <div class="box-header" data-original-title="">
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Ответ</h2>
        </div>
        <div class="box-content">
            <form class="form-horizontal" method="POST" action="{{ path('/admin/user/feedback/save') }}">
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="comment">Ответ администратора:</label>
                        <div class="controls">
                            <textarea rows="5" name="comment">{% if feedback.comment == 0 %}{{ feedback.comment }}{% endif %}</textarea>
                        </div>
                    </div>
                    <input type="hidden" name="feedbackId" value="{{ feedback.id }}"/>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Сохранить оценку</button>
                        <a href="{{ path ('/admin/user/feedback') }}" class="btn">Назад</a>
                    </div>
                </fieldset>
            </form>
        </div>

    </div>
{% endblock %}

