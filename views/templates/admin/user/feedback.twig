{% extends "layouts/admin.twig" %}

{% set selected = 'feedback' %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="{{ path('/admin/user/feedback') }}">Клиенты</a>
            <i class="icon-angle-right"></i>
            <a href="{{ path('/admin/user/feedback') }}">Обратная связь</a>
        </li>
    </ul>
{% endblock %}

{% block content %}

{% if app.session.getFlashBag.get('feedbackListChangeSuccessful') %}
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Well done!</strong> Статус успешно изменён.
    </div>
{% endif %}
<div class="row-fluid">
    <div class="box span12">
        <div class="box-header" data-original-title="">
            <h2><i class="halflings-icon user"></i><span class="break"></span>Оставившее отзыв на сайте</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content" style="display: block;">
            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
                {% if feedbacks %}
                <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable"
                       id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                    <thead>
                    <tr>
                        <th>
                            Имя
                        </th>
                        <th>
                            Контакт
                        </th>
                        <th>
                            Статуc
                        </th>
                        <th>
                            Текст отзыва
                        </th>
                        <th>
                            Ответ
                        </th>
                        <th>
                            Дата прохождения
                        </th>
                        <th>
                            Ссылка на отзыв
                        </th>
                    </tr>
                    </thead>

                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                    {% for feedback in feedbacks %}
                        <tr class="odd">
                            <td class=" sorting_1">{{ feedback.user.name }}</td>
                            <td class="center ">
                                {{ feedback.user.phone ? feedback.user.phone  : feedback.user.email }}
                            </td>
                            <td class="center ">
                                <span class="label{% if feedback.status == 1 %} label-success{% else %} label-important{% endif %}">
                                    {% if feedback.status == 1 %}
                                        Обработано
                                    {% else %}
                                        Ожидает обработки
                                    {% endif %}
                                </span>
                            </td>
                            <td class="center ">
                                {{ feedback.text }}
                            </td>
                            <td class="center ">
                                {{ feedback.comment }}
                            </td>
                            <td class="center">
                                {{ feedback.createdAt|date("F j, H:m") }}
                            </td>
                            <td class="center ">
                               <a href="{{ path('/admin/user/feedback/result', {feedback: feedback.id}) }}">Перейти</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="row-fluid">
                </div>
                {%  else %}
                    <div class="priority high">
                        <span>Пока нет клиентов оставивших отзыв</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

