{% extends "layouts/admin.twig" %}

{% set selected = 'demo' %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="{{ path('/admin/user/test') }}">Клиенты</a>
            <i class="icon-angle-right"></i>
        </li>
        <li>
           Пробный урок
        </li>
    </ul>
{% endblock %}

{% block content %}

    {% if app.session.getFlashBag.get('demoListChangeSuccessful') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Well done!</strong> Статус успешно изменён.
        </div>
    {% endif %}
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header" data-original-title="">
                <h2><i class="halflings-icon user"></i><span class="break"></span>Запросившие пробный урок</h2>
                <div class="box-icon">
                    <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content" style="display: block;">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
                    {% if demos %}
                    <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable"
                           id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                        <thead>
                        <tr>
                            <th>
                                Имя
                            </th>
                            <th>
                                Контакт
                            </th>
                            <th>
                                Статуc
                            </th>
                            <th>
                                Комментарий
                            </th>
                            <th>
                                Дата запроса
                            </th>
                            <th>
                                Изменить статус
                            </th>
                        </tr>
                        </thead>

                        <tbody role="alert" aria-live="polite" aria-relevant="all">
                        {% for demo in demos %}
                            <tr class="odd">
                                <td class=" sorting_1">{{ demo.user.name }}</td>
                                <td class="center ">
                                    {{ demo.user.phone ? demo.user.phone  : demo.user.email }}
                                </td>
                                <td class="center ">

                                <span class="label{% if demo.status == 1 %} label-success{% else %} label-important{% endif %}">
                                    {% if demo.status == 1 %}
                                        Прозвонен
                                    {% else %}
                                        Не перезванивали
                                    {% endif %}
                                </span>
                                </td>
                                <td class="center ">
                                    {{ demo.comment }}
                                </td>
                                <td class="center ">
                                    {{ demo.createdAt|date("F j, H:m") }}
                                </td>
                                <td class="center ">
                                    <a href="{{ path('/admin/user/demo/result', {demoId: demo.id}) }}">Перейти</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="row-fluid">
                    </div>
                    {%  else %}
                        <div class="priority high">
                            <span>Пока нет клиентов запросивших пробный урок</span>
                        </div>

                    {% endif %}

                    {% include "./partials/admin/paginator.twig" with {'path': '/admin/user/demo'} %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
