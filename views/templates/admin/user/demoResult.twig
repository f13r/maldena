{% extends "layouts/admin.twig" %}

{% set selected = 'demo' %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="{{ path('/admin/user/test') }}">Клиенты</a>
            <i class="icon-angle-right"></i>
            <a href="{{ path('/admin/user/demo') }}">Пробный урок</a>
            <i class="icon-angle-right"></i>
        </li>
        <li>Результаты звонка</li>
    </ul>
{% endblock %}

{% block content %}
    <div class="priority{% if demo.status == 1 %} low{% else %} high{% endif %}"><span>О клиенте</span></div>
    <div class="task{% if demo.status == 1 %} low{% else %} high{% endif %}">
        <div class="desc">
            <div class="title">{{ demo.user.name }}</div>
            <div class="phone">{{ demo.user.phone }}</div>
        </div>
        <div class="time">
            <div class="date">
                {{ demo.user.phone ? demo.user.phone  : demo.user.email }}
            </div>
            <div class="desc">
            <span class="label{% if demo.status == 1 %} label-success{% else %} label-important{% endif %}">
                {% if demo.status == 1 %}
                    Прозвонен
                {% else %}
                    Не перезванивали
                {% endif %}
            </span>
            </div>
        </div>
    </div>
    <hr>

    <div class="box">
        <div class="box-header" data-original-title="">
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Результаты звонка</h2>
        </div>
        <div class="box-content">
            <form class="form-horizontal" method="POST" action="{{ path('/admin/user/demo/save') }}">
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="level">Статус звонка:</label>
                        <div class="controls">
                            <select id="status" name="status">
                                <option value="0" {% if demo.status == 0 %}selected{% endif %}>Не перезванивали</option>
                                <option value="1" {% if demo.status == 1 %}selected{% endif %}>Прозвонен</option>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="comment">Комментарий:</label>
                        <div class="controls">
                            <textarea rows="5" name="comment">{% if demo.comment is defined %}{{ demo.comment }}{% endif %}</textarea>
                        </div>
                    </div>
                    <input type="hidden" name="demoId" value="{{ demo.id }}"/>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Сохранить результаты</button>
                        <a href="{{ path ('/admin/user/demo') }}" class="btn">Назад</a>
                    </div>
                </fieldset>
            </form>
        </div>

    </div>
{% endblock %}

