{% extends "layouts/admin.twig" %}


{% block content %}
{% if change == 1 %}
<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <strong>Well done!</strong> Статус успешно изменён.
</div>
{% endif %}
<div class="row-fluid">
    <div class="box span12">
        <div class="box-header" data-original-title="">
            <h2><i class="halflings-icon user"></i><span class="break"></span>Прошедшие тест на сайте</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content" style="display: block;">
            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
                <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable"
                       id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                    <thead>
                    <tr>
                        <th>
                            Имя
                        </th>
                        <th>
                            Контакт
                        </th>
                        <th>
                            Цели обучения
                        </th>
                        <th>
                            Статуc
                        </th>
                        <th>
                            Уровень
                        </th>
                        <th>
                            Комментарий преподавателя
                        </th>
                        <th>
                            Дата прохождения
                        </th>
                        <th>
                            Ссылка на тест
                        </th>
                    </tr>
                    </thead>

                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                    {% for answer in answers %}
                        <tr class="odd">
                            <td class=" sorting_1">{{ answer.name }}</td>
                            <td class="center ">{{ answer.contact }}</td>
                            <td class="center ">{{ answer.goals }}</td>
                            <td class="center ">

                                <span class="label{% if answer.status == 1 %} label-success{% else %} label-important{% endif %}">
                                    {% if answer.status == 1 %}
                                        Проверено
                                    {% else %}
                                        Ожидает проверки
                                    {% endif %}
                                </span>
                            </td>
                            <td class="center ">
                                {{ answer.result }}
                            </td>
                            <td class="center ">
                                {{ answer.comment }}
                            </td>
                            <td class="center ">
                                {{ answer.date }}
                            </td>
                            <td class="center ">
                               <a href="{{ answer.link }}">Перейти</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="row-fluid">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

